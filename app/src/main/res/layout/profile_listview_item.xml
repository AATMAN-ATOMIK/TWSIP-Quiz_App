<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/score_listitem_background"
    android:padding="10dp"
    android:layout_marginVertical="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/p_quiz_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/chocolate_bar_demo"
        android:layout_centerVertical="true"
        android:text="@string/quiz_name"/>

    <TextView
        android:paddingHorizontal="10dp"
        android:id="@+id/p_score_lable"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/score"
        android:fontFamily="@font/chocolate_bar_demo"
        />
    <TextView
        android:id="@+id/p_score"
        android:paddingHorizontal="10dp"
        android:layout_below="@id/p_score_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_alignParentEnd="true"
        android:text="@string/score"
        android:textSize="18sp"
        android:fontFamily="@font/chocolate_bar_demo"
        />

</RelativeLayout>